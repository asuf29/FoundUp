<div class="min-h-screen flex items-center justify-center bg-gray-50 px-6">
  <div class="bg-white p-8 rounded-2xl shadow-md w-full max-w-md">
    <h2 class="text-3xl font-bold text-center text-gray-900 mb-6">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-[#cbf36e] focus:outline-none" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-[#cbf36e] focus:outline-none" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center mb-4">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-[#cbf36e] border-gray-300 rounded focus:ring-[#cbf36e]" %>
          <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-700" %>
        </div>
      <% end %>

      <div class="mb-6">
        <%= f.submit "Log in", class: "w-full border-2 border-transparent bg-[#cbf36e] text-black px-8 py-3 rounded-xl shadow-md
                  transition-all duration-300 hover:bg-[#d9ff90] hover:scale-105 hover:shadow-lg" %>
      </div>
    <% end %>

    <div class="text-center text-sm text-gray-600">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
