<div class="flex-1 bg-gray-50">
  <section class="bg-black text-center py-20">
    <h2 class="text-5xl font-extrabold text-white mb-6 tracking-tight">
      Discover <span class="text-[#cbf36e]">Innovative</span> <span class="text-[#966ef3]">Projects</span>
    </h2>
    <p class="text-gray-400 text-lg max-w-2xl mx-auto mb-10 leading-relaxed">
      Explore groundbreaking ideas from talented developers. Find your next investment opportunity or get inspired.
    </p>
  </section>

  <section class="max-w-6xl mx-auto px-6 -mt-10 relative z-10">
    <div class="bg-white border border-gray-100 shadow-xl rounded-2xl p-8">
      <div class="mb-8">
        <label class="block text-sm font-semibold text-gray-700 mb-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 inline mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
          Search Projects
        </label>
        <%= form_with(url: projects_path, method: :get, local: true, class: "w-full") do %>
          <div class="relative">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-gray-400 absolute left-4 top-1/2 -translate-y-1/2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-4.35-4.35m0 0A7.5 7.5 0 1010.5 3a7.5 7.5 0 006.15 13.65z" />
            </svg>
            <%= text_field_tag :search, params[:search],
              placeholder: "Search by project name, creator, or keywords...",
              class: "border-2 border-gray-200 bg-gray-50 rounded-xl pl-12 pr-4 py-3.5 w-full text-gray-700 placeholder-gray-400 focus:ring-2 focus:ring-[#cbf36e] focus:border-[#cbf36e] focus:bg-white outline-none transition-all duration-300" %>
            <%= hidden_field_tag :category, params[:category] if params[:category].present? %>
            <%= submit_tag "Search", class: "hidden" %>
          </div>
        <% end %>
      </div>

      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 inline mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
          </svg>
          Filter by Category
        </label>
        <div class="flex flex-wrap gap-3">
          <%= link_to projects_path(search: params[:search]), 
              class: "group flex items-center gap-2 px-6 py-3 rounded-xl text-sm font-semibold transition-all duration-300 #{params[:category].blank? ? 'bg-[#cbf36e] text-black shadow-md' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
            All Projects
            <% if params[:category].blank? %>
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 ml-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
            <% end %>
          <% end %>
          
          <% Project.categories.keys.each do |category| %>
            <% is_active = params[:category] == category %>
            <%= link_to projects_path(category: category, search: params[:search]),
                class: "group flex items-center gap-2 px-6 py-3 rounded-xl text-sm font-semibold transition-all duration-300 hover:scale-105 #{is_active ? 'bg-[#966ef3] text-white shadow-md' : 'bg-gray-100 text-gray-700 hover:bg-[#966ef3]/10 hover:text-[#966ef3]'}" do %>
              <% case category %>
              <% when 'ai' %>
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                </svg>
              <% when 'web' %>
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                </svg>
              <% when 'mobile' %>
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                </svg>
              <% when 'blockchain' %>
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                </svg>
              <% when 'game' %>
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              <% end %>
              <%= category.titleize %>
              <% if is_active %>
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 ml-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>

      <% if params[:search].present? || params[:category].present? %>
        <div class="mt-6 pt-6 border-t border-gray-200">
          <div class="flex items-center justify-between flex-wrap gap-3">
            <div class="flex items-center gap-2 text-sm text-gray-600">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
              </svg>
              <span class="font-medium">Active filters:</span>
            </div>
            <div class="flex flex-wrap gap-2">
              <% if params[:search].present? %>
                <span class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-[#cbf36e]/20 text-gray-700 rounded-lg text-sm font-medium">
                  Search: "<%= params[:search] %>"
                  <%= link_to projects_path(category: params[:category]), class: "ml-1 hover:text-red-600 transition" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                  <% end %>
                </span>
              <% end %>
              <% if params[:category].present? %>
                <span class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-[#966ef3]/20 text-gray-700 rounded-lg text-sm font-medium">
                  Category: <%= params[:category].titleize %>
                  <%= link_to projects_path(search: params[:search]), class: "ml-1 hover:text-red-600 transition" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                  <% end %>
                </span>
              <% end %>
              <%= link_to "Clear all", projects_path, 
                  class: "inline-flex items-center gap-1 px-3 py-1.5 bg-gray-200 text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-300 transition" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </section>

  <section class="max-w-6xl mx-auto px-6 py-16">
    <% if @projects.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @projects.each do |project| %>
          <%= link_to project_path(project), class: "group bg-white rounded-2xl shadow-md hover:shadow-xl transition-all duration-300 border border-gray-100 overflow-hidden cursor-pointer block h-full" do %>
            <% if project.images.attached? %>
              <%= image_tag project.images.first,
                  class: "w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300" %>
            <% else %>
              <div class="bg-gradient-to-br from-gray-100 to-gray-200 h-48 flex items-center justify-center text-gray-400 text-sm">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-16 h-16 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
            <% end %>
            <div class="p-6">
              <div class="mb-3">
                <span class="inline-block px-3 py-1 bg-[#966ef3]/10 text-[#966ef3] text-xs font-semibold rounded-full">
                  <%= project.category&.titleize || "Uncategorized" %>
                </span>
              </div>
              <h3 class="text-xl font-semibold text-gray-800 mb-2 group-hover:text-[#cbf36e] transition">
                <%= project.name %>
              </h3>
              <p class="text-sm text-gray-500 mb-4">by <span class="font-medium text-gray-700"><%= project.creator.username %></span></p>
              <div class="inline-flex items-center text-sm font-medium text-gray-700 group-hover:text-[#cbf36e] transition">
                View Details
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-20">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-24 h-24 mx-auto text-gray-300 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <h3 class="text-2xl font-semibold text-gray-800 mb-2">No projects found</h3>
        <p class="text-gray-500 mb-6">Try adjusting your search or filters</p>
        <%= link_to "View All Projects", projects_path,
            class: "inline-block bg-[#cbf36e] text-black px-6 py-3 rounded-xl font-medium hover:bg-[#d9ff90] hover:scale-105 hover:shadow-lg transition-all duration-300" %>
      </div>
    <% end %>
  </section>
</div>