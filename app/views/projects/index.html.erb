<section class="max-w-6xl mx-auto px-6 my-16">
  <div class="flex flex-col md:flex-row justify-between items-center gap-6 bg-white border border-gray-100 shadow-sm rounded-2xl p-6">
    <%= form_with(url: projects_path, method: :get, local: true, class: "w-full md:w-1/2") do %>
      <div class="relative">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-gray-400 absolute left-3 top-2.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-4.35-4.35m0 0A7.5 7.5 0 1010.5 3a7.5 7.5 0 006.15 13.65z" />
        </svg>
        <%= text_field_tag :search, params[:search],
          placeholder: "Search projects...",
          class: "border border-gray-200 bg-gray-50 rounded-full pl-10 pr-4 py-2 w-full text-gray-700 placeholder-gray-400 focus:ring-2 focus:ring-[#cbf36e] focus:bg-white outline-none transition" %>
        <%= submit_tag "Search", class: "hidden" %>
      </div>
    <% end %>
    <div class="flex flex-wrap justify-center md:justify-end gap-3">
      <%= link_to "All", projects_path,
          class: "px-5 py-2 bg-gray-100 text-gray-700 rounded-full text-sm font-medium hover:bg-[#cbf36e]/30 hover:text-black transition-all duration-200" %>
      <% Project.categories.keys.each do |category| %>
        <%= link_to category.titleize,
            projects_path(category: category, search: params[:search]),
            class: "px-5 py-2 bg-gray-100 text-gray-700 rounded-full text-sm font-medium hover:bg-[#cbf36e]/30 hover:text-black transition-all duration-200" %>
      <% end %>
    </div>
  </div>
</section>
<section class="max-w-6xl mx-auto px-6 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10 mb-24">
  <% @projects.each do |project| %>
    <div class="group bg-white rounded-2xl shadow-md hover:shadow-xl transition-all duration-300 border border-gray-100 overflow-hidden">
      <% if project.images.attached? %>
        <%= image_tag project.images.first,
            class: "w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300" %>
      <% else %>
        <div class="bg-gray-100 h-48 flex items-center justify-center text-gray-400 text-sm">
          No Image
        </div>
      <% end %>
      <div class="p-5">
        <h3 class="text-lg font-semibold text-gray-800 mb-1 group-hover:text-[#cbf36e] transition">
          <%= project.name %>
        </h3>
        <p class="text-sm text-gray-500 mb-4">by <%= project.creator.username %></p>
        <div class="flex justify-between items-center">
          <%= link_to "View Details â†’", project_path(project),
              class: "text-sm font-medium text-blue-600 hover:text-blue-800 transition" %>
        </div>
      </div>
    </div>
  <% end %>
</section>
